<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
	<!-- 注意，classPathEntry只在下面这两种情况下才有效： 当加载 JDBC 驱动内省数据库时 当加载根类中的 JavaModelGenerator检查重写的方法时 -->
	<classPathEntry
		location="F:\development\m2\repository\mysql\mysql-connector-java\5.1.39\mysql-connector-java-5.1.39.jar" />
	<context id="DBconntion" targetRuntime="Mybatis3">
		<commentGenerator>
			<!-- 是否生成注释带时间戳；是否去掉注释 -->
			<property name="suppressDate" value="true" />
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://123.207.98.252:3306/wxpay" userId="root"
			password="123456">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value=" false" />
		</javaTypeResolver>
		<!-- 实体类生成的地方 -->
		<javaModelGenerator targetPackage="com.mast.wxpay.entity"
			targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- sql的配置文件定义 xml -->
		<sqlMapGenerator targetPackage="mapper"
			targetProject="src/main/resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- mapper接口生成的位置. DAO定义 XMLMAPPER是xml的配置方式，还有ANNOTabelMapper的是注解方式 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.mast.wxpay.mapper" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<!-- 表和生成实体名 -->
		<table tableName="order" domainObjectName="Order"
			enableCountByExample="false" enableUpdateByExample="false"
			enableDeleteByExample="false" enableSelectByExample="false"
			selectByExampleQueryId="false">
		</table>
		<table tableName="refund" domainObjectName="Refund"
			   enableCountByExample="false" enableUpdateByExample="false"
			   enableDeleteByExample="false" enableSelectByExample="false"
			   selectByExampleQueryId="false">
		</table>
	</context>
</generatorConfiguration>